{
    "compilerOptions": {
        "baseUrl" : "./",
        "paths": {
            "*" : ["./node_modules/@types/*", "*"]
        },
        "lib": [
            "es5",
            "es6"
        ],
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./build",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "declaration": true
    },
    "include": [
       "src"
    ],
    "exclude": [
      "node_modules",
      "build",
      "spec"
    ]
 }
 